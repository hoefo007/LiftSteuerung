#ifndef INFORMER_H_
#define INFORMER_H_

class Informer {
private:
	std::list<Observer> observerList;
	virtual void inform()=0;
public:
	virtual void register(Observer)=0;
	virtual void unregistrer(Observer)=0;

};

#endif /* INFORMER_H_ */
