#ifndef UART_H_
#define UART_H_

#define UART_REC_BUF_SIZE 10
#define UART_SND_BUF_SIZE 10

class UART {
	private;
	char recvBuffer[UART_REC_BUF_SIZE];
	char sendBuffer[UART_SND_BUF_SIZE];
public:
	UART();
	virtual ~UART();
	void
};

#endif /* UART_H_ */
