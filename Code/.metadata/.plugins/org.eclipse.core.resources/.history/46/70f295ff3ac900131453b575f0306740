#ifndef UART_H_
#define UART_H_

#include "Observer.h"
#include <string>
#include <list>

#define UART_REC_BUF_SIZE 10
#define UART_SND_BUF_SIZE 10

class UARTC {
private:
	std::list<string> recvBufferList;
	Observer *observer;
	int bufferIndex;
	char recvBuffer[UART_REC_BUF_SIZE];
	void UARTRecInt();
	void UARTSendInt();
public:
	UARTC(Observer*);
	virtual ~UARTC();
	void sendString(string);
	string receiveString();
};

#endif /* UART_H_ */
